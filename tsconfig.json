{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "DOM",
      "es2020"
    ],
    "jsx": "react",
    "module": "ESNext",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "noEmit": true,
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "const/*": [
        "src/const/*"
      ],
      "reducers/*": [
        "src/reducers/*"
      ],
      "views/*": [
        "src/views/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "lib/*": [
        "src/lib/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "actions/*": [
        "src/actions/*"
      ],
      "store/*": [
        "src/store/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
    },
    "typeRoots": [
      "./src/types",
      "node_modules/@types",
      "@types"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ],
}
