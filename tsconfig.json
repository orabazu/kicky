{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "const/*": [
        "src/const/*"
      ],
      "contexts/*": [
        "src/contexts/*"
      ],
      "reducers/*": [
        "src/reducers/*"
      ],
      "managers/*": [
        "src/managers/*"
      ],
      "views/*": [
        "src/views/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "store/*": [
        "src/store/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}